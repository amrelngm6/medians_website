
            {% if data|length %} 
                <div class="cairo mx-auto  pt-10   purple-color font-semibold text-2xl mx-auto text-center w-96">
                    {{lang.__('search_result_for')}} {{search_text}} 
                    <br />
                    <small>{{lang.__('in')}} {{section_title}}</small>
                    <span class="mx-auto my-4 w-20 border border-b-1  border-gray-300 block"></span>
                </div>
                {% if data|length < 2 %} 
                    {% for item in data %}
                    <div class="w-1/4">{% include 'views/front/includes/blog_item.html.twig' %}</div>
                    {% endfor %}
                {% else %}
                <div class="custom-scroll-container mb-10 custom-scroll relative z-10 overflow-x-auto">
                    <div style="min-width: {{ 460 * items|length}}px;"   class="custom-scroll-list w-full flex gap-3 gap px-1 ">
                        {% for item in data %}
                        {% include 'views/front/includes/blog_item.html.twig' %}
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            {% endif %}