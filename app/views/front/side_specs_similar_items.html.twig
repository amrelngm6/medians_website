
            {% if similar_items|length > 0 %}
            <h4 class="title-gradient rounded-lg py-2 mt-12 my-2 pl-40 pr-6 purple-color font-semibold text-xl " style="width: max-content;">
                {{lang.__('SIMILAR_ITEMS')}}
            </h4>
            {% endif %}
            <div class="lg:flex gap-3 gap row">
                {% for similar_item in similar_items %}
                <div class="blog-main-item lg:flex block w-full">
                    <div class="blog-item-img lg:w-5/12">
                        <img loading="lazy" width="90" height="90" alt="{{similar_item.content.title}}" src="/stream?image={{similar_item.picture}}" class="rounded-lg w-full py-4 lg:py-6">
                    </div>
                    <div class="blog-item-content lg:w-7/12">
                        <div class="py-2 lg:py-6 lg:pr-6 lg:px-10 px-2">

                            <a href="/{{similar_item.content.prefix}}" class="block  font-semibold text-sm cyan-color">{{similar_item.created_at | date('Y-m-d')}}</a>
                            <a href="/{{similar_item.content.prefix}}" class="lg:py-4 py-2 block font-bold purple-color lg:text-xl md:text-lg text-base">{{similar_item.content.title}}</a>
                            <p class=" font-semibold text-gray-600 lg:text-base text-sm">{{similar_item.content.content |striptags|slice(0, 100) }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>