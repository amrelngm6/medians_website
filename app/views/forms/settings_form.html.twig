{% include 'views/includes/header.html.twig' %}

<main id="form-page" class="   flex-1   w-full">
    <div class="relative w-full pb-8">
        <div class="relative lg:px-4 xl:px-0 mx-auto md:flex items-center gap-8">
            <div class="login-content container h-screen lg:flex justify-center items-center">
                <div class="p-2 lg:p-8 bg-white dark:bg-gray-700 rounded-lg  flex-auto">
                    <form action="{{formAction}}" method="POST" data-refresh="1" id="signup-form" class="ajax-form action p-8 py-0 m-auto   rounded-lg max-w-xl pb-10">
                        <div class="lg:p-8 p- w-full 2 bg-white dark:bg-gray-700 rounded-lg max-w-6xl ">
                            <h1 class="m-auto max-w-xl text-center">{{title}}</h1>
                            <hr class="mt-5 py-5" />
                            <input name="type" type="hidden" value="updateSettings">
                            <label class="block py-5">
                                <span class="text-gray-700">Sitename</span>
                                <input name="params[settings][sitename]" type="text" class="h-12 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" placeholder="Site name" value="{{ app.Settings.getItem('sitename').value() }}">
                            </label>
                            <label class="block py-5">
                                <span class="text-gray-700"> Minimum cost time ( Minutes )</span>
                                <input name="params[settings][min_cost_time]" type="number" class="h-12 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" placeholder="Minimum cost per minutues" value="{{ app.Settings.getItem('min_cost_time').value() }}">
                            </label>
                        </div>
                        <div class="p-10">
                            <button class="uppercase h-12 mt-3 text-white w-full rounded bg-red-700 hover:bg-red-800">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

{% include 'views/includes/footer.html.twig' %}