{% include 'views/includes/header.html.twig' %}


                        <!-- main -->
                        <main style="" class=" flex-1 overflow-x-hidden overflow-y-auto  ">

                            <div class="py-2 mt-1"></div>
                            <!-- today tab 1 -->
                            <!-- New releases -->
                            <div class="px-4 mb-6 py-4 rounded-lg shadow-lg bg-white dark:bg-gray-700 ">
                                <a href="#!" class="ToggleItem float-right border-gray-400 bordered border  px-5 py-1"  data-toggle-target=".main-sidebar" data-toggle-class="activate">Add new</a>
                                <h1 class="font-bold text-lg ">{{title}}</h1>

                                <hr class="mt-2" />
                                <div class="row ">

                                {% for device in devicesList %}
							        <div class="col-6 col-sm-4 col-lg-2 {% if device.publish == 0 %} opacity-50 {% endif %} ">
                                        <div class="album  transform transition duration-400 hover:scale-105">
                                            <div class="album__cover {% if device.playing %} active  {% endif %} ">
                                                <img src="{{app.CONF.url}}assets/img/ps.png" alt="">
