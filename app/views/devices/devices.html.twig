{% include 'views/includes/header.html.twig' %}


                        <!-- main -->
                        <main style="" class=" flex-1 overflow-x-hidden overflow-y-auto  ">

                            <div class="py-2 mt-1"></div>
                            <!-- today tab 1 -->
                            <!-- New releases -->
                            {% for type in typesList %}

                            <div class="px-4 mb-6 py-4 rounded-lg shadow-lg bg-white dark:bg-gray-700 ">
                                <h1 class="font-bold text-lg ">{{type.title}}</h1>

                                <div class="row ">

                                {% for device in devicesList %}
                                    {% if device.type.id == type.id %}
							        <div class="col-6 col-sm-4 col-lg-2">
                                        <div class="album  transform transition duration-400 hover:scale-105">
                                            <div class="album__cover {% if device.playing %} active  {% endif %} ">
                                                <div class="relative">
                                                <img src="./assets/img/ps.png" alt="">
                                                    
                                                <a data-ajax="true" href="{{app.CONF.url}}device/{{device.id}}">
                                                    <svg class="{% if device.playing %} loading_arrow {% endif %}" width="50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                                        <path  d="M437.02,74.98C388.667,26.629,324.38,0,256,0S123.333,26.629,74.98,74.98C26.629,123.333,0,187.62,0,256s26.629,132.667,74.98,181.02C123.333,485.371,187.62,512,256,512c46.813,0,92.617-12.758,132.462-36.893c9.447-5.724,12.467-18.022,6.744-27.469c-5.724-9.449-18.023-12.467-27.469-6.744C334.144,461.244,295.505,472,256,472c-119.103,0-216-96.897-216-216S136.897,40,256,40s216,96.897,216,216c0,42.589-12.665,84.044-36.626,119.884c-6.139,9.182-3.672,21.603,5.51,27.742c9.184,6.141,21.604,3.672,27.742-5.51C497.002,355.674,512,306.53,512,256C512,187.62,485.371,123.333,437.02,74.98z"/>
                                                    </svg>
                                                </a>

                                                <a data-ajax="true" href="{{app.CONF.url}}device/{{device.id}}">
                                                    <svg class="{% if device.playing %} loading_arrow {% endif %}" width="50" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                                        <path  d="M437.02,74.98C388.667,26.629,324.38,0,256,0S123.333,26.629,74.98,74.98C26.629,123.333,0,187.62,0,256s26.629,132.667,74.98,181.02C123.333,485.371,187.62,512,256,512c46.813,0,92.617-12.758,132.462-36.893c9.447-5.724,12.467-18.022,6.744-27.469c-5.724-9.449-18.023-12.467-27.469-6.744C334.144,461.244,295.505,472,256,472c-119.103,0-216-96.897-216-216S136.897,40,256,40s216,96.897,216,216c0,42.589-12.665,84.044-36.626,119.884c-6.139,9.182-3.672,21.603,5.51,27.742c9.184,6.141,21.604,3.672,27.742-5.51C497.002,355.674,512,306.53,512,256C512,187.62,485.371,123.333,437.02,74.98z"/>
                                                    </svg>
                                                </a>
                                                </div>
                                                <span class="album__stat">
                                                    <span>{{device.playing_time}}{{device.typeData.title}} </span>
                                                </span>
                                            </div>
                                            <div class="album__title mb-2">
                                                <h4><a href="#!" class="text-sm text-red-600 font-bold">{{device.title}}</a></h4>
                                            </div>
                                            {% if device.currentOrder.status == 'active' %}
                                                <div class="text-gray-500 ">
                                                    <div class="flex  text-sm font-medium">
                                                        <div>Started:</div> 
                                                        <div class="text-red-500 pl-2">{{device.currentOrder.startTime|date("H:i") }}</div> 
                                                    </div>
                                                </div>

                                                {% if device.currentOrder.endTime > 1  %}

                                                <div class="album__title">
                                                    <div class="flex text-gray-500 text-sm font-medium">
                                                        <div class="inline-block ">Estimated:</div>
                                                        <div class="pl-2 counter-down  text-red-500 inline-block" id="device-{{device.id}}" data-time="{{device.currentOrder.endTime}}" >
                                                            {{device.currentOrder.endTime|date("H:i") }}  
                                                        </div>
                                                    </div>
                                                </div>
                                                {% endif %}
                                                
                                            {% endif %}
                                        </div>
                                    </div>
                                    {% endif %}
								    {% endfor %}
                                </div>
                            </div>
                            {% endfor %}

                        </main>
                        <!-- end of main -->
<div id="main-forms-container"></div>

